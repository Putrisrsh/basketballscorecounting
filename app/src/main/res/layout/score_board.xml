<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Match Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"
            android:textStyle="bold" android:textColor="@color/collorBlack"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="205dp" android:id="@+id/guideline"/>
    <TextView
            android:text="Team A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_team_a" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.578"
            android:textStyle="bold" android:textSize="30sp"
            android:textColor="@color/collorBlack" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Team B"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/txt_team_b" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.429"
            android:textColor="@color/collorBlack"
            android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="30sp"/>
    <TextView
            android:text="0"
            android:layout_width="59dp"
            android:layout_height="43dp"
            android:id="@+id/txt_scoreA" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textStyle="bold" android:textSize="30sp" app:layout_constraintHorizontal_bias="0.558"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_team_a"/>
    <TextView
            android:text="0"
            android:layout_width="59dp"
            android:layout_height="43dp"
            android:id="@+id/txt_scoreB" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            android:textAlignment="center" android:textStyle="bold" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.458"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_team_b"/>
    <Button
            android:text="+3 POINTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3pointsA" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:background="@color/colororangeice" app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_scoreA"/>
    <Button
            android:text="+2 POINTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2pointsA" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3pointsA" android:textStyle="bold"
            android:background="@color/colororangeice" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="FREE THROW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFreeThrowA" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2pointsA" android:textStyle="bold"
            android:background="@color/colororangeice" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="+3 POINTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3pointsB"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" android:textStyle="bold" android:background="@color/colororangeice"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txt_scoreB"
            app:layout_constraintHorizontal_bias="0.431"/>
    <Button
            android:text="+2 POINTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2pointsB" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/btn3pointsB" android:textStyle="bold"
            android:background="@color/colororangeice"/>
    <Button
            android:text="FREE THROW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFreeThrowB" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2pointsB" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" android:textStyle="bold" android:background="@color/colororangeice"/>
    <Button
            android:text="RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset"
            android:textStyle="bold" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSave" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:background="@color/colororangeice"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
            android:background="@color/colororangeice" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>